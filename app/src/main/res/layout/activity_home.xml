<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llChoose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BCE48D"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTag_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/clTag_1"
                app:layout_constraintStart_toStartOf="@id/clTag_1"
                app:layout_constraintTop_toTopOf="@id/clTag_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChoose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="48sp"
                android:textColor="#5E6E4B"
                app:layout_constraintBottom_toBottomOf="@id/clTag_1"
                app:layout_constraintEnd_toEndOf="@id/clTag_1"
                app:layout_constraintStart_toStartOf="@id/clTag_1"
                app:layout_constraintTop_toBottomOf="@id/rv1"/>

            <Button
                android:id="@+id/btnCheckTag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/clTag_1"
                app:layout_constraintEnd_toEndOf="@id/clTag_1"
                app:layout_constraintStart_toStartOf="@id/clTag_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTag_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/clTag_2"
                app:layout_constraintStart_toStartOf="@id/clTag_2"
                app:layout_constraintTop_toTopOf="@id/clTag_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChoose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="48sp"
                android:textColor="#5E6E4B"
                app:layout_constraintBottom_toBottomOf="@id/clTag_2"
                app:layout_constraintEnd_toEndOf="@id/clTag_2"
                app:layout_constraintStart_toStartOf="@id/clTag_2"
                app:layout_constraintTop_toBottomOf="@id/rv2"/>


            <Button
                android:id="@+id/btnCheckTag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/clTag_2"
                app:layout_constraintEnd_toEndOf="@id/clTag_2"
                app:layout_constraintStart_toStartOf="@id/clTag_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clTag_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/clTag_3"
                app:layout_constraintStart_toStartOf="@id/clTag_3"
                app:layout_constraintTop_toTopOf="@id/clTag_3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvChoose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="48sp"
                android:textColor="#5E6E4B"
                app:layout_constraintBottom_toBottomOf="@id/clTag_3"
                app:layout_constraintEnd_toEndOf="@id/clTag_3"
                app:layout_constraintStart_toStartOf="@id/clTag_3"
                app:layout_constraintTop_toBottomOf="@id/rv3"/>


            <Button
                android:id="@+id/btnCheckTag3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="選擇"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/clTag_3"
                app:layout_constraintEnd_toEndOf="@id/clTag_3"
                app:layout_constraintStart_toStartOf="@id/clTag_3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>